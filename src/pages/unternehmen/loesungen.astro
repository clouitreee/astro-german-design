---
import BaseLayout from '../../layouts/BaseLayout.astro';

const schema = {
    "@context": "https://schema.org",
    "@type": "Service",
    "serviceType": "IT-Beratung und Systemintegration",
    "provider": {
        "@type": "Organization",
        "name": "TechHilfe Pro",
        "url": "https://www.your-domain.com/unternehmen/loesungen"
    },
    "areaServed": {
        "@type": "State",
        "name": "Nordrhein-Westfalen"
    },
    "description": "Spezialisierte IT-Lösungen und Beratungsdienste für die Optimierung von Geschäftsprozessen und Systemen."
};
---

<BaseLayout title="Lösungen | Unternehmen | German Design System" schema={schema}>
	<main class="p-8">
		<h1 class="text-4xl font-bold text-manus-blue-500">Unternehmenslösungen</h1>
		<p class="mt-4 text-manus-gray-700">Detaillierte Informationen zu unseren Business-Lösungen.</p>
	</main>
</BaseLayout>
