<header class="sticky top-0 z-50 bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <a href="/" class="font-semibold text-manus-blue-600">Tech&nbsp;Hilfe&nbsp;Pro</a>

      <button id="mnav-btn" aria-expanded="false" aria-controls="mnav"
        class="md:hidden inline-flex items-center justify-center rounded-md p-2 text-manus-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
        type="button">
        <span class="sr-only">Menü öffnen</span>
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none"><path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
      </button>

      <ul id="mnav" class="hidden md:flex gap-6">
        <li><a href="/privatkunden">Privatkunden</a></li>
        <li><a href="/unternehmen">Unternehmen</a></li>
        <li><a href="/kontakt" class="btn btn-primary">Kontakt</a></li>
      </ul>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mnav-btn');
  const nav = document.getElementById('mnav');
  const set = (open) => {
    nav.classList.toggle('hidden', !open);
    btn.setAttribute('aria-expanded', String(open));
    document.body.classList.toggle('overflow-hidden', open);
  };
  btn?.addEventListener('click', () => set(nav.classList.contains('hidden')));
  window.addEventListener('keydown', e => { if (e.key === 'Escape') set(false) });
  addEventListener('scroll', () => set(false), { passive: true });
  addEventListener('astro:page-load', () => set(false));
</script>

  </div>
</header>
