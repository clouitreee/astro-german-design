---
import { Image } from '@astrojs/image/components';
import placeholderImage from '../assets/placeholder.png'; 

export interface Props {
    src?: any; // Use 'any' for ImageMetadata type compatibility
    alt: string;
    width: number;
    height: number;
    class?: string;
}

const { src = placeholderImage, alt, width, height, class: className } = Astro.props;
---

<Image 
    src={src} 
    alt={alt} 
    width={width} 
    height={height} 
    format="webp" 
    class:list={[
        "w-full h-full object-cover bg-manus-gray-200",
        className
    ]}
/>
