---
type LinkItem = { href: string; text: string }
type Section = { title: string; links: LinkItem[] }

const footerLinks: Section[] = [
  {
    title: 'Unternehmen',
    links: [
      { href: '/unternehmen', text: 'Überblick' },
      { href: '/unternehmen/loesungen', text: 'Lösungen' },
      { href: '/unternehmen/karriere', text: 'Karriere' },
    ],
  },
  {
    title: 'Privatkunden',
    links: [
      { href: '/privatkunden', text: 'Überblick' },
      { href: '/privatkunden/produkte', text: 'Produkte' },
      { href: '/privatkunden/support', text: 'Support' },
    ],
  },
  {
    title: 'Rechtliches',
    links: [
      { href: '/impressum', text: 'Impressum' },
      { href: '/datenschutz', text: 'Datenschutz' },
      { href: '/agb', text: 'AGB' },
    ],
  },
  {
    title: 'Kontakt',
    links: [
      { href: '/kontakt', text: 'Kontaktformular' },
      { href: '/ueber-uns', text: 'Standorte' },
    ],
  },
];
---

<footer class="mt-12 bg-[#003366] text-white">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {footerLinks.map((section) => (
        <nav aria-label={section.title}>
          <h3 class="mb-4 border-b border-white/25 pb-1 text-lg font-semibold">
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-white/80 underline-offset-4 transition hover:text-white hover:underline focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      ))}
    </div>

